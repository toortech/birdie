  <!-- Load scripts in correct order -->
  <script>
    // Debug utilities
    function updateDebugStatus(message, type = 'warning') {
      const debugStatus = document.getElementById('debug-status');
      if (debugStatus) {
        debugStatus.innerHTML = `<div class="debug-status ${type}">${message}</div>`;
      }
    }

    function addDebugItem(message, type = 'info') {
      const debugList = document.getElementById('debug-checklist');
      if (debugList) {
        const li = document.createElement('li');
        li.textContent = message;
        li.style.color = type === 'success' ? '#155724' : type === 'error' ? '#721c24' : '#856404';
        debugList.appendChild(li);
      }
    }

    function clearDebugList() {
      const debugList = document.getElementById('debug-checklist');
      if (debugList) {
        debugList.innerHTML = '';
      }
    }

    // Check if scripts are loading
    updateDebugStatus('üîÑ Checking script dependencies...', 'warning');
    clearDebugList();

    // Load config.js first - inline fallback if file missing
    window.BBB_CONFIG = window.BBB_CONFIG || {
      cloudflareEnabled: true,
      requireCaptcha: true,
      authWorkerUrl: 'https://your-auth-worker.your-subdomain.workers.dev',
      turnstile: {
        siteKey: 'YOUR_TURNSTILE_SITE_KEY_HERE',
        theme: 'light',
        size: 'normal',
        retry: 'auto',
        retryInterval: 8000,
        refreshExpired: 'auto'
      }
    };

    // Basic auth module - inline fallback
    window.BBB_AUTH = window.BBB_AUTH || {
      currentUser: null,
      isAuthenticated: false,
      config: { cloudflareEnabled: true, requireCaptcha: true },
      init: function(options) {
        console.log('BBB_AUTH initialized with fallback');
        this.config = { ...this.config, ...options };
        return this;
      },
      loginWithCaptcha: async function(username, password, captchaToken) {
        throw new Error('BBB_AUTH not properly loaded - check script files');
      }
    };

    // CAPTCHA state management
    let captchaToken = null;
    let captchaCompleted = false;
    let isLoggingIn = false;
    let loginProcessed = false;
    let authCheckCompleted = false;
    let turnstileLoaded = false;
    let configLoaded = false;

    // Turnstile CAPTCHA callbacks
    window.onCaptchaSuccess = function(token) {
      console.log('‚úÖ CAPTCHA completed successfully');
      captchaToken = token;
      captchaCompleted = true;
      
      updateDebugStatus('‚úÖ CAPTCHA verification successful!', 'success');
      addDebugItem('‚úÖ CAPTCHA token received', 'success');
      
      // Update UI
      document.getElementById('captcha-error').style.display = 'none';
      document.getElementById('captcha-success').style.display = 'block';
      
      // Enable login button
      const loginBtn = document.getElementById('login-btn');
      loginBtn.disabled = false;
      loginBtn.textContent = 'Login to BBB';
      loginBtn.style.background = 'linear-gradient(135deg, #0046ad, #004d00)';
      
      // Add success styling to captcha container
      const captchaContainer = document.querySelector('.captcha-container');
      captchaContainer.style.borderColor = '#28a745';
      captchaContainer.style.backgroundColor = '#f8f9fa';
    };

    window.onCaptchaError = function(error) {
      console.error('‚ùå CAPTCHA error:', error);
      captchaToken = null;
      captchaCompleted = false;
      
      updateDebugStatus('‚ùå CAPTCHA verification failed', 'error');
      addDebugItem(`‚ùå CAPTCHA error: ${error}`, 'error');
      
      // Update UI
      document.getElementById('captcha-success').style.display = 'none';
      document.getElementById('captcha-error').style.display = 'block';
      document.getElementById('captcha-error').textContent = 'CAPTCHA verification failed. Please try again.';
      
      // Disable login button
      const loginBtn = document.getElementById('login-btn');
      loginBtn.disabled = true;
      loginBtn.textContent = 'Complete Security Check First';
      loginBtn.style.background = '#6c757d';
      
      // Add error styling to captcha container
      const captchaContainer = document.querySelector('.captcha-container');
      captchaContainer.style.borderColor = '#dc3545';
      captchaContainer.style.backgroundColor = '#fff5f5';
    };

    window.onCaptchaExpired = function() {
      console.log('‚è∞ CAPTCHA expired');
      captchaToken = null;
      captchaCompleted = false;
      
      updateDebugStatus('‚è∞ CAPTCHA expired - please complete again', 'warning');
      addDebugItem('‚è∞ CAPTCHA token expired', 'error');
      
      // Update UI
      document.getElementById('captcha-success').style.display = 'none';
      document.getElementById('captcha-error').style.display = 'block';
      document.getElementById('captcha-error').textContent = 'Security verification expired. Please complete it again.';
      
      // Disable login button
      const loginBtn = document.getElementById('login-btn');
      loginBtn.disabled = true;
      loginBtn.textContent = 'Complete Security Check First';
      loginBtn.style.background = '#6c757d';
    };

    window.onCaptchaTimeout = function() {
      console.log('‚è∞ CAPTCHA timeout');
      onCaptchaExpired(); // Same handling as expired
    };

    // Check Turnstile script loading
    function checkTurnstileScript() {
      if (typeof window.turnstile !== 'undefined') {
        turnstileLoaded = true;
        addDebugItem('‚úÖ Turnstile script loaded successfully', 'success');
        return true;
      } else {
        addDebugItem('‚ùå Turnstile script not found', 'error');
        return false;
      }
    }

    // Initialize page
    function initializePage() {
      console.log('üöÄ Initializing login page with CAPTCHA debug...');
      
      updateDebugStatus('üîÑ Initializing components...', 'warning');
      clearDebugList();

      // Check config
      if (typeof BBB_CONFIG !== 'undefined') {
        configLoaded = true;
        addDebugItem('‚úÖ BBB_CONFIG loaded', 'success');
        addDebugItem(`üì° Auth Worker URL: ${BBB_CONFIG.authWorkerUrl || 'NOT SET'}`, BBB_CONFIG.authWorkerUrl ? 'success' : 'error');
        addDebugItem(`üîë Site Key: ${BBB_CONFIG.turnstile?.siteKey || 'NOT SET'}`, (BBB_CONFIG.turnstile?.siteKey && BBB_CONFIG.turnstile.siteKey !== 'YOUR_TURNSTILE_SITE_KEY_HERE') ? 'success' : 'error');
      } else {
        addDebugItem('‚ùå BBB_CONFIG not found - using fallback', 'error');
      }

      // Check auth module
      if (typeof BBB_AUTH !== 'undefined' && typeof BBB_AUTH.init === 'function') {
        addDebugItem('‚úÖ BBB_AUTH module loaded', 'success');
        try {
          BBB_AUTH.init({
            cloudflareEnabled: true,
            requireCaptcha: true
          });
          addDebugItem('‚úÖ BBB_AUTH initialized', 'success');
        } catch (error) {
          addDebugItem(`‚ùå BBB_AUTH init error: ${error.message}`, 'error');
        }
      } else {
        addDebugItem('‚ùå BBB_AUTH module not found', 'error');
      }

      // Check Turnstile
      setTimeout(() => {
        if (checkTurnstileScript()) {
          setupCaptcha();
        } else {
          addDebugItem('‚è≥ Waiting for Turnstile script...', 'info');
          // Try again in 2 seconds
          setTimeout(() => {
            if (checkTurnstileScript()) {
              setupCaptcha();
            } else {
              updateDebugStatus('‚ùå Turnstile script failed to load', 'error');
              addDebugItem('‚ùå Turnstile may be blocked or failed to load', 'error');
              addDebugItem('üí° Check browser console and network tab', 'info');
            }
          }, 2000);
        }
      }, 1000);

      // Setup form
      setupLoginForm();
    }

    // Setup CAPTCHA
    function setupCaptcha() {
      console.log('üîß Setting up CAPTCHA...');
      
      const turnstileWidget = document.getElementById('turnstile-widget');
      
      if (!turnstileWidget) {
        addDebugItem('‚ùå Turnstile widget element not found', 'error');
        return;
      }

      // Set site key from config
      if (BBB_CONFIG && BBB_CONFIG.turnstile && BBB_CONFIG.turnstile.siteKey) {
        if (BBB_CONFIG.turnstile.siteKey !== 'YOUR_TURNSTILE_SITE_KEY_HERE') {
          turnstileWidget.setAttribute('data-sitekey', BBB_CONFIG.turnstile.siteKey);
          addDebugItem(`‚úÖ Site key set: ${BBB_CONFIG.turnstile.siteKey.substring(0, 20)}...`, 'success');
          
          // Try to render the widget
          try {
            if (window.turnstile && window.turnstile.render) {
              const widgetId = window.turnstile.render(turnstileWidget);
              addDebugItem(`‚úÖ Turnstile widget rendered (ID: ${widgetId})`, 'success');
              updateDebugStatus('‚úÖ CAPTCHA loaded successfully!', 'success');
            } else {
              addDebugItem('‚ùå Turnstile render function not available', 'error');
              updateDebugStatus('‚ùå Turnstile render failed', 'error');
            }
          } catch (error) {
            addDebugItem(`‚ùå Turnstile render error: ${error.message}`, 'error');
            updateDebugStatus('‚ùå CAPTCHA render failed', 'error');
          }
        } else {
          addDebugItem('‚ùå Site key not configured (still placeholder)', 'error');
          updateDebugStatus('‚ùå Site key not configured', 'error');
          document.getElementById('captcha-error').style.display = 'block';
          document.getElementById('captcha-error').textContent = 'CAPTCHA site key not configured. Please contact administrator.';
        }
      } else {
        addDebugItem('‚ùå Turnstile configuration missing from BBB_CONFIG', 'error');
        updateDebugStatus('‚ùå CAPTCHA configuration missing', 'error');
      }
    }

    // Setup login form
    function setupLoginForm() {
      const loginForm = document.getElementById('login-form');
      const loginBtn = document.getElementById('login-btn');
      
      loginForm.addEventListener('submit', function(event) {
        event.preventDefault();
        
        // Prevent multiple login attempts
        if (isLoggingIn || loginProcessed) {
          console.log('Login already in progress or completed');
          return;
        }
        
        // CAPTCHA validation - REQUIRED
        if (!captchaCompleted || !captchaToken) {
          showError('Please complete the security verification first.');
          document.getElementById('captcha-error').style.display = 'block';
          document.getElementById('captcha-error').textContent = 'Security verification is required to login.';
          return;
        }
        
        const username = document.getElementById('username').value.trim();
        const password = document.getElementById('password').value;
        
        if (!username || !password) {
          showError('Please enter both username and password.');
          return;
        }
        
        // Set login state
        isLoggingIn = true;
        
        // Show loading state
        showLoading();
        loginBtn.disabled = true;
        
        // Clear any previous messages
        hideMessages();
        
        console.log('üîê Attempting secure login for user:', username);
        
        // Try to login
        if (typeof BBB_AUTH !== 'undefined' && typeof BBB_AUTH.loginWithCaptcha === 'function') {
          BBB_AUTH.loginWithCaptcha(username, password, captchaToken)
            .then(user => {
              console.log('‚úÖ Secure login successful:', user);
              showSuccess('Secure login successful! Redirecting...');
              setTimeout(() => {
                window.location.href = 'index.html';
              }, 1500);
            })
            .catch(err => {
              console.error('‚ùå Secure login error:', err);
              isLoggingIn = false;
              loginBtn.disabled = false;
              hideLoading();
              
              // Reset CAPTCHA on login failure
              if (window.turnstile) {
                try {
                  window.turnstile.reset();
                  captchaToken = null;
                  captchaCompleted = false;
                  document.getElementById('captcha-success').style.display = 'none';
                  document.getElementById('captcha-error').style.display = 'block';
                  document.getElementById('captcha-error').textContent = 'Please complete security verification again.';
                  loginBtn.disabled = true;
                  loginBtn.textContent = 'Complete Security Check First';
                } catch (resetError) {
                  console.error('Error resetting CAPTCHA:', resetError);
                }
              }
              
              showError(err.message || 'Invalid username or password. Please try again.');
            });
        } else {
          isLoggingIn = false;
          loginBtn.disabled = false;
          hideLoading();
          showError('Authentication system not properly loaded. Please refresh the page.');
        }
      });
    }

    // Show/hide message functions
    function showLoading() {
      document.getElementById('loading').style.display = 'block';
    }

    function hideLoading() {
      document.getElementById('loading').style.display = 'none';
    }

    function showError(message) {
      hideMessages();
      const errorElement = document.getElementById('error-message');
      errorElement.innerHTML = `<strong>Login Failed:</strong> ${message}`;
      errorElement.style.display = 'block';
    }

    function showSuccess(message) {
      hideMessages();
      const successElement = document.getElementById('success-message');
      successElement.innerHTML = `<strong>Success!</strong> ${message}`;
      successElement.style.display = 'block';
    }

    function hideMessages() {
      document.getElementById('error-message').style.display = 'none';
      document.getElementById('success-message').style.display = 'none';
      document.getElementById('loading').style.display = 'none';
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializePage);
    } else {
      initializePage();
    }

    // Check script loading after a delay
    setTimeout(() => {
      addDebugItem('üìä Script loading check complete', 'info');
      if (!turnstileLoaded) {
        updateDebugStatus('‚ùå CAPTCHA failed to load - check configuration', 'error');
        addDebugItem('üí° Possible issues:', 'info');
        addDebugItem('  ‚Ä¢ Turnstile script blocked by ad blocker', 'info');
        addDebugItem('  ‚Ä¢ Network connectivity issues', 'info');
        addDebugItem('  ‚Ä¢ Incorrect site key configuration', 'info');
        addDebugItem('  ‚Ä¢ Domain not registered with Turnstile', 'info');
      }
    }, 5000);
  </script>

  <!-- Load external scripts -->
  <script src="js/config.js" onerror="console.error('Failed to load config.js')"></script>
  <script src="js/utils.js" onerror="console.error('Failed to load utils.js')"></script>
  <script src="js/auth.js" onerror="console.error('Failed to load auth.js')"></script>
  <script src="js/db.js" onerror="console.error('Failed to load db.js')"></script>
  <script src="js/ui.js" onerror="console.error('Failed to load ui.js')"></script>
  
  <!-- Cloudflare Turnstile - Load last -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" 
          async defer 
          onerror="console.error('Failed to load Turnstile script'); document.getElementById('debug-status').innerHTML='<div class=debug-status error>‚ùå Turnstile script failed to load</div>'"></script>
</body>
